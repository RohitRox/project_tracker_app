<h2>Listing projects</h2>

<table>
  <tr>
    <th>Name of The Project</th>
    <th>Created At</th>
    <th>Author</th>
    <th>Deadline</th>
    <th>Status</th>
    <th colspan="3">Actions</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%=project.created_at %></td>
    <td><%=(User.find(project.author)).email%></td>
    <td><%= project.deadline %></td>
    <td><%=project.status %></td>
    <td><%= link_to 'Show', project %></td>
    <% if project.author == current_user.id %>
    <td id="edit_<%=(project.id) %>"><%= link_to 'Edit', edit_project_path(project) %></td>
    <td id="destroy_<%=(project.id) %>"><%= link_to 'Destroy', project, confirm: 'Are you sure?', method: :delete %></td>

    <% end %>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @projects %>
<br />
<%= link_to 'New Project', new_project_path %>

